<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription">

    <data>
        <import type="android.view.View"/>

        <import type="android.text.TextUtils"/>

        <variable
            name="article"
            type="com.kevin.newsapp.data.model.news.NewsArticle"/>

        <variable
            name="clickListener"
            type="com.kevin.newsapp.ui.main.fragment.headline.childfragment.top.adapter.TopRecyclerViewItemClickListener"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:cardElevation="2dp"
        android:onClick="@{() -> clickListener.onClick(article.url)}"
        android:foreground="?attr/selectableItemBackground">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/topArticleImageView"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:background="@color/LightGrey"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setImageUrl="@{article.urlToImage}" />

            <TextView
                android:id="@+id/topArticleTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@{article.title}"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topArticleImageView" />

            <TextView
                android:id="@+id/topArticleDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text='@{article.description + " ..."}'
                android:textColor="@color/DimGray"
                android:visibility="@{TextUtils.isEmpty(article.description) ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/topArticleTitle"
                app:layout_constraintStart_toStartOf="@+id/topArticleTitle"
                app:layout_constraintTop_toBottomOf="@+id/topArticleTitle" />

            <TextView
                android:id="@+id/topArticleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topArticleDescription"
                app:setDate="@{article.publishedAt}" />

            <ImageView
                android:id="@+id/topSaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/topArticleDate"
                app:layout_constraintEnd_toStartOf="@+id/topShareButton"
                app:layout_constraintTop_toTopOf="@+id/topArticleDate"
                app:srcCompat="@drawable/sharp_turned_in_not_black_24" />

            <ImageView
                android:id="@+id/topShareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/topSaveButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/topSaveButton"
                app:srcCompat="@drawable/sharp_share_black_24" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>